<h1><%= @product.name %></h1>
<hr>
<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-6">
        <h3>Origin: <%= @product.country_of_origin %> || Cost: $<%= @product.cost %>.00 </h3>
      </div>
      <div class="col">
        <div class = "header">
          <%= link_to "EDIT PRODUCT", edit_product_path(@product) %>   ||   <%= link_to "DELETE PRODUCT", product_path(@product), :data => {:confirm => "Are you sure you'd like to delete this product?", :method => "delete"} %>
        </div>
      </div>
    </div>
    <br>


    <% if @product.reviews.any? %>
      <h4>PRODUCT REVIEWS:</h4>
      <hr>
      <div class = "container">
        <% @product.reviews.each do |review| %>
          <div class="row">
            <div class = "col">
              By: <%= review.author %> 
            </div>
            <div class = "col">
              Rating: <%= review.rating %> of 5
            </div>
          </div>
          <div class="row">
            <div class="col-md-10">
              <p><%= review.content_body %></p>
              <p><%= link_to "edit", edit_product_review_path(@product, review)%><p>
            </div>
          </div>
        <% end %>
      <div>
    <% else %>
      <p>There are currently no reviews for this product!</p>
    <% end %>

    <footer><%= link_to "ADD REVIEW", new_product_review_path(@product)%> || <%= link_to "HOME PAGE", home_path %> </footer>
  </div>
</div>
